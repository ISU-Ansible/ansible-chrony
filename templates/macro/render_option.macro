{#- Render Options Jinja Template #}

{% macro render_option(key,value,indent=false) -%}
{%  if value is defined %}
{%    if indent == true %}  {% endif %}
{%    if value is sameas true %}
{{ key }}
{%    elif value is string or value is number %}
{{ key }} {{ value }}
{%    else %}
{%      for i in value %}
{{ key }} {{ i }}
{%      endfor %}
{%    endif %}
{%  endif %}
{%- endmacro %}
